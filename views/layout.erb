          <li class="toggle-topbar menu-icon"><a href="#"><span></span></a></li>
        </ul>

        <section class="top-bar-section">
          <!-- Left Nav Section -->
          <ul class="left button-group even-2 top-nav-menu">
              <li class="<%= 'active' if @current == 'home' %>"><a class="icon-home" href="/">home</a></li>
              <li><a class="icon-pencil" href="http://www.unlimited-code-works.com" target="_blank">blog</a></li>
              <li class="<%= 'active' if @current == 'about' %>"><a class="icon-user" href="/about">about</a></li>
              <li class="<%= 'active' if @current == 'portfolio' %>"><a class="icon-folder-open" href="/portfolio">portfolio</a></li>
              <li class="<%= 'active' if @current == 'resume' %>"><a class="icon-article" href="/resume">r&eacutesum&eacute</a></li>
              <li class="<%= 'active' if @current == 'contact' %>"><a class="icon-mail" href="/contact">contact</a></li>
          </ul>
        </section>
      </nav>
    
    <div class="large-9 small-12 columns">

      <%= yield %>

    </div>

