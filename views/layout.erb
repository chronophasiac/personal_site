        <li class="<%= 'active' if @current == 'resume' %>"><a href="/resume">r&eacutesum&eacute</a></li>
        <li class="<%= 'active' if @current == 'contact' %>"><a href="/contact">contact</a></li>
      </nav>
    </div>
      <nav class="show-for-small top-bar">
        <ul class="title-area">
