	<div class="row">

    <div class="hide-for-small large-3 columns">
      <nav class="side-nav <%= 'side-nav-home' if @home %>">
        <% unless @home %>
          <li><a id="side-nav-name" href="/"><span class="first-name">mike</span> <span class="last-name">raimondi</span></a></li>
